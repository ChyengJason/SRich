<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="@dimen/edit_note_toolbar_btn_size"
        android:layout_height="@dimen/edit_note_toolbar_btn_size"
        android:src="@mipmap/ic_note_edit_back"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/tick_btn"
        android:layout_width="@dimen/edit_note_toolbar_btn_size"
        android:layout_height="@dimen/edit_note_toolbar_btn_size"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/ic_note_edit_tick"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/more_btn"
        android:layout_width="@dimen/edit_note_toolbar_btn_size"
        android:layout_height="@dimen/edit_note_toolbar_btn_size"
        android:src="@mipmap/ic_note_edit_more"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>