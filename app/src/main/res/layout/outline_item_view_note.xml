<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_layout"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/outline_item_margin_horizon"
    android:paddingRight="@dimen/outline_item_margin_horizon">
    
    <ImageView
        android:id="@+id/summary_image_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>
    
    <TextView
        android:id="@+id/date_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/outline_item_margin_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/summary_image_view"
        app:layout_constraintBottom_toTopOf="@+id/title_text"
        android:textSize="@dimen/outline_item_date_text_size"
        android:textColor="@color/outline_item_date_text_color"
        android:text="@string/app_name"/>

    <TextView
        android:id="@+id/title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/outline_item_margin_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_text"
        app:layout_constraintRight_toLeftOf="@+id/summary_image_view"
        app:layout_constraintBottom_toTopOf="@+id/summary_text"
        android:textSize="@dimen/outline_item_title_size"
        android:textColor="@color/outline_item_title_text_color"
        android:textStyle="bold"
        android:text="@string/app_name"
        android:maxLines="2"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/outline_line_spacing"/>

    <TextView
        android:id="@+id/summary_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/outline_item_margin_vertical"
        android:textSize="@dimen/outline_item_title_size"
        android:textColor="@color/outline_item_summary_text_color"
        android:text="@string/app_name"
        android:maxLines="3"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/outline_line_spacing"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/summary_image_view"
        app:layout_constraintTop_toBottomOf="@+id/title_text"
        app:layout_constraintBottom_toTopOf="@+id/cut_line"/>

    <TextView
        android:id="@+id/cut_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/outline_item_margin_vertical"
        android:background="@drawable/outline_toolbar_line"
        app:layout_constraintTop_toBottomOf="@+id/summary_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>